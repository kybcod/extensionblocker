<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="flow.extensionblocker.mapper.CustomExtensionMapper">

    <!-- 커스텀 확장자 목록 -->
    <select id="selectAll" resultType="CustomExtension">
        SELECT
            id,
            extension,
            created_at
        FROM custom_extension
        ORDER BY id DESC
    </select>

    <!-- 커스텀 확장자 개수 -->
    <select id="count" resultType="int">
        SELECT COUNT(*)
        FROM custom_extension
    </select>

    <!-- 확장자 중복 여부 -->
    <select id="existsCustomByExtension" resultType="int">
        SELECT COUNT(*)
        FROM custom_extension
        WHERE extension = #{extension}
    </select>

    <!-- 커스텀 확장자 추가 -->
    <insert id="insert">
        INSERT INTO custom_extension (extension, created_at)
        VALUES (#{extension}, NOW())
    </insert>

    <!-- 커스텀 확장자 삭제 -->
    <delete id="delete">
        DELETE FROM custom_extension
        WHERE id = #{id}
    </delete>

</mapper>
